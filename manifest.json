{
  "manifest_version": 3,
  "name": "Tab Resource Manager",
  "version": "1.0",
  "description": "Monitor memory, network, and CPU/GPU usage per tab in real-time.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["<all_urls>"]
}
